{
    "compilerOptions": {
      "module": "CommonJS",
      "declaration": true,
      "lib": ["ESNext", "dom"],
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020",
      "outDir": "lib",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true  
    },
    "include": ["src/**/*.ts" ],
    "exclude": [
      "node_modules/**/*",
      ".vscode/**/*"
    ],
    "ts-node": {
    }
  }
  